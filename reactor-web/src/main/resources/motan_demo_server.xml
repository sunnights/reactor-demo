<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:motan="http://api.weibo.com/schema/motan"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- 业务具体实现类 -->
    <bean id="motanDemoServiceImpl" class="com.weibo.api.vlog.service.MotanDemoServiceImpl"/>

    <!-- config server 通用配置，线上环境使用config.api.weibo.com:80 -->
    <motan:registry id="localRegistry" regProtocol="local"/>

    <!-- motan协议 -->
    <motan:protocol id="motanProto" name="motan" serialization="hessian2" maxServerConnection="10000"
                    minWorkerThread="1000" maxWorkerThread="3000"/>

    <!-- 基础配置，多个rpc服务使用相同的基础配置. group和module定义具体的服务池 -->
    <motan:basicService id="serviceBasicConfig" registry="localRegistry" export="motanProto:8001"
                        group="motan-demo-rpc" application="motan-rpc-service" module="motan-demo-rpc"
                        accessLog="true" requestTimeout="200"/>

    <!-- 具体rpc服务配置，声明实现的接口类。需要根据业务情况设置合适的超时时间 -->
    <motan:service interface="com.weibo.api.vlog.service.MotanDemoService" ref="motanDemoServiceImpl" basicService="serviceBasicConfig"/>
</beans>
